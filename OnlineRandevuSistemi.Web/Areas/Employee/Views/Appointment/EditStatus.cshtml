@model OnlineRandevuSistemi.Web.ViewModels.EmployeeAppointmentStatusViewModel

@{
    ViewData["Title"] = "Randevu Durumunu Güncelle";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">🔄 Randevu Durumunu Güncelle</h4>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

            <form asp-action="EditStatus" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="CurrentStatus" class="form-label">Mevcut Durum</label>
                    <input asp-for="CurrentStatus" class="form-control" disabled />
                </div>

                <div class="mb-3">
                    <label asp-for="NewStatus" class="form-label">Yeni Durum</label>
                    <select asp-for="NewStatus" asp-items="ViewBag.StatusOptions" class="form-select"></select>
                    <span asp-validation-for="NewStatus" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-warning text-dark fw-semibold">
                        <i class="bi bi-check-circle me-1"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}