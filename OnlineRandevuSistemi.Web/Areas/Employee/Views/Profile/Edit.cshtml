@model OnlineRandevuSistemi.Web.ViewModels.EmployeeProfileEditViewModel

@{
    ViewData["Title"] = "Profil Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">👤 Profil Bilgilerini Güncelle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">Ad</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Soyad</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">E-posta</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label">Adres</label>
                        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label">Doğum Tarihi</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Position" class="form-label">Pozisyon</label>
                        <input asp-for="Position" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Biography" class="form-label">Biyografi</label>
                        <textarea asp-for="Biography" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HourlyDate" class="form-label">Saatlik Ücret</label>
                        <input asp-for="HourlyDate" class="form-control" />
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-info text-white fw-semibold">
                        <i class="bi bi-check-circle me-1"></i> Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}