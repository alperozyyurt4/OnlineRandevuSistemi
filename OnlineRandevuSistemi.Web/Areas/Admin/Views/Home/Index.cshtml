@model OnlineRandevuSistemi.Web.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">Yönetim Paneli</h2>

<div class="row g-4">

    <div class="col-md-4">
        <a asp-area="Admin" asp-controller="Service" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-primary shadow">
                <div class="card-header text-center fw-semibold">Toplam Hizmet</div>
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.TotalServices</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a asp-area="Admin" asp-controller="Customer" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-success shadow">
                <div class="card-header text-center fw-semibold">Toplam Müşteri</div>
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.TotalCustomers</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a asp-area="Admin" asp-controller="Employee" asp-action="Index" class="text-decoration-none">       
            <div class="card text-white bg-info shadow">
                <div class="card-header text-center fw-semibold">Toplam Çalışan</div>
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.TotalEmployees</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-6">
        <a asp-area="Admin" asp-controller="Appointment" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-warning shadow">
                <div class="card-header text-center fw-semibold">Toplam Randevu</div>
                <div class="card-body text-center">
                    <h3 class="card-title">@Model.TotalAppointments</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-secondary shadow">
            <div class="card-header text-center fw-semibold">Bekleyen Randevu</div>
            <div class="card-body text-center">
                <h3 class="card-title">@Model.PendingAppointments</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-dark shadow">
            <div class="card-header text-center fw-semibold">Onaylı Randevu</div>
            <div class="card-body text-center">
                <h3 class="card-title">@Model.ConfirmedAppointments</h3>
            </div>
        </div>
    </div>

</div>