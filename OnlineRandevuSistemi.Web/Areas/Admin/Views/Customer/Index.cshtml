@model IEnumerable<OnlineRandevuSistemi.Business.DTOs.CustomerDto>

@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "_Layout";
}

<h2>Müşteri Listesi</h2>

<a class="btn btn-success mb-3" asp-action="Create">Yeni Müşteri Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Not</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Notes</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.Id">Düzenle</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@customer.Id"
                       onclick="return confirm('Bu müşteriyi silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>