@model IEnumerable<OnlineRandevuSistemi.Business.DTOs.ServiceDto>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Hizmet Listesi";
    
}

<h2 class="mt-4">Hizmet Listesi</h2>

<a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Service" asp-action="Create">Yeni Hizmet Ekle</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Süre (dk)</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@String.Format("{0:C}", item.Price)</td>
                    <td>@item.DurationMinutes</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>

                        <a class="btn btn-danger btn-sm"
                           asp-action="Delete"
                           asp-route-id="@item.Id"
                           onclick="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                            Sil
                        </a>

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Kayıtlı hizmet bulunamadı.</td>
            </tr>
        }
    </tbody>
</table>
