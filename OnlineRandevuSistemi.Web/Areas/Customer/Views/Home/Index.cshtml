@model OnlineRandevuSistemi.Web.ViewModels.CustomerDashboardViewModel

@{
    ViewData["Title"] = "Müşteri Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <h2 class="mb-5 text-center fw-bold text-primary">👤 Müşteri Paneli</h2>

    <div class="row g-4 justify-content-center">

        <!-- Randevularım -->
        <div class="col-md-4">
            <div class="card h-100 border-primary shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-calendar3 text-primary fs-1 mb-3"></i>
                    <h5 class="card-title">📋 Randevularım</h5>
                    <p class="card-text">Mevcut ve geçmiş randevularınızı görüntüleyin.</p>
                    <a class="btn btn-outline-primary w-100" asp-area="Customer" asp-controller="Appointment" asp-action="Index">Görüntüle</a>
                </div>
            </div>
        </div>

        <!-- Yeni Randevu -->
        <div class="col-md-4">
            <div class="card h-100 border-success shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-plus-circle text-success fs-1 mb-3"></i>
                    <h5 class="card-title">🆕 Yeni Randevu Al</h5>
                    <p class="card-text">Yeni bir hizmet için kolayca randevu alın.</p>
                    <a class="btn btn-outline-success w-100" asp-area="Customer" asp-controller="Appointment" asp-action="Create">Randevu Al</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Popüler Hizmetler -->
    <div class="mt-5">
        <h4 class="text-center text-warning fw-bold mb-4">🔥 Popüler Hizmetler</h4>
        <div class="row g-4 justify-content-center">

            @foreach (var service in Model.PopularServices)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card border-warning shadow-sm h-100">
                        <div class="card-body text-center">
                            <i class="bi bi-star-fill text-warning fs-2 mb-2"></i>
                            <h6 class="card-title">@service.Name</h6>
                            <p class="card-text small text-muted">@service.AppointmentCount randevu alınmış</p>
                            <a class="btn btn-sm btn-warning"
                               asp-area="Customer"
                               asp-controller="Appointment"
                               asp-action="Create"
                               asp-route-serviceId="@service.Id">
                                Randevu Al
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

</div>