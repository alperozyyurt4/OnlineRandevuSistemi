@{
    ViewData["Title"] = "Müşteri Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">👤 Müşteri Paneli</h2>

    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-primary mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">📋 Randevularım</h5>
                    <p class="card-text">Mevcut ve geçmiş randevularınızı görüntüleyin.</p>
                    <a class="btn btn-outline-primary" asp-area="Customer" asp-controller="Appointment" asp-action="Index">Görüntüle</a>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm border-success mb-4">
                <div class="card-body text-center">
                    <h5 class="card-title">🆕 Yeni Randevu Al</h5>
                    <p class="card-text">Yeni bir hizmet için kolayca randevu alın.</p>
                    <a class="btn btn-outline-success" asp-area="Customer" asp-controller="Appointment" asp-action="Create">Randevu Al</a>
                </div>
            </div>
        </div>
    </div>
</div>